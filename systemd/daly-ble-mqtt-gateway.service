[Unit]
Description=Daly Smart BMS / Balancer BLE MQTT Gateway
After=network-online.target bluetooth.service mosquitto.service
Wants=network-online.target

[Service]
Type=simple
User=black
WorkingDirectory=/home/black/bms-rs485-service-suite
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/black/bms-rs485-service-suite/.venv/bin/python -u /home/black/bms-rs485-service-suite/tools/daly_ble_mqtt_gateway.py --config /home/black/bms-rs485-service-suite/config/daly_ble_gateway.json
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

